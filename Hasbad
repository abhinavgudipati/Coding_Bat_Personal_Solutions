Code for Hasbad question ;

public boolean hasBad(String str) {
  if(str.length()<3){
    return false;
  }
  else if( str.length()==3){
    if(str.substring(0,3).equals("bad")){
      return true;
    }
    return false;
  }
  else if( str.length()>3){
    if(str.substring(0,3).equals("bad")){
      return true;
    }
    if(str.substring(1,4).equals("bad")){
      return true;
    }
    return false;
  }
  return false;
  
}
